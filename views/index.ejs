<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <style>
    body {
      font-family: "Arial", sans-serif;
      background-color: #f7f7f7;
      padding: 30px;
      text-align: center;
    }

    h1 {
      font-size: 36px;
      font-weight: bold;
      color: #FF6347;
      margin-bottom: 20px;
    }

    p {
      font-size: 18px;
      color: #444;
      margin-bottom: 20px;
    }

    .table-container {
      max-height: 500px;
      overflow-y: auto;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      background-color: #ffffff;
      margin-top: 30px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      border-spacing: 0;
    }

    th, td {
      border: 1px solid #e1e1e1;
      padding: 15px;
      text-align: left;
    }

    th {
      background-color: #FF6347;
      color: #ffffff;
      text-transform: uppercase;
      font-weight: bold;
    }

    tr:hover {
      background-color: #f2f2f2;
      transition: background-color 0.2s ease-in-out;
    }
  </style>
</head>
<body>
  <h1><%= title %></h1>
  <p>English <%= title %></p>
  <div class="table-container">
    <table>
      <tr>
        <th>ID</th>
        <th>TERM</th>
        <th>DESCRIPTION</th>
        <th>REFERENCE</th>
      </tr>
      <% glossary.forEach((row) => { %>
      <tr>
        <td><%= row.id %></td>
        <td><%= row.Term %></td>
        <td><%= row.Description %></td>
        <td><%= row.reference %></td>
      </tr>
      <% }) %>
    </table>
  </div>
</body>
</html>
